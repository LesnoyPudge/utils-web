{
    "extends": "./tsconfig.base.json",
    "include": [
        "./src/**/*",
        "node_modules/@types"
    ],
    "exclude": [
        "./src/**/*.test.*"
    ],
    "compilerOptions": {
        "types": [
            "@lesnoypudge/types-global-base",
            "@lesnoypudge/types-global-web",
        ],
        "paths": {
            "@root/*": [
                "./src/*"
            ],
        },
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ]
    }
}